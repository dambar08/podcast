<%= form_with(model: [:user, :users, episode], class: "contents") do |form| %>
  <% if episode.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(episode.errors.count, "error") %> prohibited this episode from being saved:</h2>
      <ul class="list-disc ml-6">
        <% episode.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="grid grid-cols-12 gap-12">
    <div class="col-span-8">
      <div class="bg-gray-100 rounded-lg p-16 py-32  ">
        <div class="text-4xl font-bold text-center">Drags audio file here or choose a file</div>
      </div>
      <div class="text-center">Upload an audio file or <%= button_to "delete this episode", user_users_episode_path(id: episode.id), method: :delete, data: { turbo_method: :delete }, class: "underline" %>.</div>
      <div class="flex flex-col gap-1">
        <%= form.label :title, class: "font-bold" %>
        <%= form.text_field :title, class: "outline rounded p-2" %>
      </div>
      <div class="flex flex-col gap-1">
        <%= form.label :description, class: "font-bold" %>
        <%= form.rich_textarea :description, class: "outline rounded p-2" %>
      </div>
      <div class="flex flex-col gap-1">
        <%= form.label :explicit_content,"Explicit Content", class: "font-bold" %>
        <div class="flex flex-row items-center gap-1">
          <%= form.checkbox "Explicit Content", class: "font-bold" %>
          <div>This episode contains explicit material.</div>
        </div>
      </div>
    </div>
    <div class="col-span-4">
      <div>Episodes can not be published until an audio file has been uploaded.</div>
      <div class="flex flex-col gap-4 rounded-lg overflow-clip bg-gray-100">
        <div class="bg-black text-white p-2">When do you want to publish?</div>
        <div class="py-4">
          <div class="leading-4 px-3 py-2">
            <div class="font-bold">Leave Unpublished</div>
            <div class="text-sm text-neutral-500">Manually publish when you're ready.</div>
          </div>
          <div class="leading-4 px-3 py-2">
            <div class="font-bold">Publish Immediately</div>
            <div class="text-sm text-neutral-500">Goes live after processing is complete.</div>
          </div>
          <div class="leading-4 px-3 py-2">
            <div class="font-bold">Schedule for Future</div>
            <div class="text-sm text-neutral-500">Pick a date and time for release.</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
