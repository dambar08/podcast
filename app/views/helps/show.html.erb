<div class="max-w-4xl mx-auto p-6 space-y-6 font-sans text-gray-800">
  <div class="container mx-auto space-y-4">
    <h1 class="text-5xl font-bold">Help</h1>
    <div class="space-y-8">
      <% if @categories.any? %>
        <div class="space-y-2 justify-between items-center pb-5 sm:pb-0">
          <% @categories.each do |category| %>
            <%= render partial: "category", locals: { category: category } %>
          <% end %>
        </div>
      <% end %>
      <div id="articles" class="min-w-full divide-y divide-gray-200 space-y-5">
        <% if @articles.any? %>
          <div class="text-3xl font-bold">Frequently Asked Questions</div>
          <% @articles.each do |article| %>
            <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
              <div class="container mx-auto">
                <%= render partial: "article", locals: { article: article } %>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-center my-10">No articles found.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
